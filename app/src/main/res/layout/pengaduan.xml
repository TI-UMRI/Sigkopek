<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:context=".Fragment.PengaduanFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_margin="25dp">

        <ImageView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:id="@+id/logo"
             android:scaleType="fitCenter"
             android:layout_marginTop="100dp"
             android:layout_alignParentRight="true"
             android:layout_alignParentEnd="true"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true" />

         <EditText
             android:id="@+id/nama"
             android:hint="Ketikkan Nama lengkap Anda"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="30dp"
             android:background="#5026C281"
             android:padding="8dp"
             android:singleLine="true"
             android:textColorHint="@color/LightGrey2"
             android:textColor="@color/DeepGrey"
             android:textAppearance="?android:attr/textAppearanceSmall"
             android:layout_below="@+id/logo" />

        <EditText
            android:id="@+id/tlp"
            android:hint="Ketikkan No. Telepon / HP Anda"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#5026C281"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textColorHint="@color/LightGrey2"
            android:textColor="@color/DeepGrey"
            android:layout_below="@+id/nama"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignStart="@+id/nama" />

         <EditText
             android:hint="Ketikkan Pengaduan Anda"
             android:id="@+id/pesan"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="#5026C281"
             android:padding="8dp"
             android:lines="4"
             android:layout_marginTop="10dp"
             android:fitsSystemWindows="true"
             android:inputType="textMultiLine"
             android:singleLine="false"
             android:textColorHint="@color/LightGrey2"
             android:textColor="@color/DeepGrey"
             android:gravity="top"
             android:layout_below="@+id/tlp"
             android:textAppearance="?android:attr/textAppearanceSmall"
              />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/Green"
            android:scaleType="fitCenter"
            android:id="@+id/buttonSend"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="KIRIM"
            android:textColor="@color/WHITE"
            android:textSize="15sp"
            android:layout_below="@+id/pesan"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
